apiVersion: v1
kind: Secret
metadata:
  name: backend-secret
  namespace: dev
  labels:
    app: myapp
    component: backend
type: Opaque
data:
  # Base64 encoded values (echo -n 'value' | base64)
  # These should match your .env file values
  POSTGRES_DB: xyz
  POSTGRES_USER: xyz
  POSTGRES_PASSWORD: xyz
  REDIS_PASSWORD: xyz
